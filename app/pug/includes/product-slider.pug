                  .product-item.p-25.d-flex.flex-column.justify-between.tdn.product-item-js
                    button.favorite.favorite-js.click-effect-js.btn-reset.cup.h-main.active
                      .icon.icon_fill 
                        svg(width="24" height="24")
                          use(xlink:href='#heart')
                    a(href="#1").product-item__link 
                    .product-item__status.status.status_orange.bg-white.text-uppercase.ls-1-6.fz-10.fw-500.lh-16.d-if.align-center.justify-center.pl-10.pr-10.text-center WERBUNG
