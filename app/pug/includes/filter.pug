.slide-panel.bg-white.popup-js.popup-window-js.close(data-name="sorting")
  .slide-panel__top.d-flex.justify-between
    .title.title_h2.fw-600.ls-0-1.d-flex.align-center.mr-10 Filter für
    .slide-panel__close.radius-100.bg-white.bordered-lgc.d-flex.align-center.justify-center.cup.popup-close-js 
      .icon.icon_fill   
        svg(width="24" height="24")
          use(xlink:href='#close') 

  .filter
    .filter__list.scroll-y 

      .filter__item 
        .filter__item-heading.d-flex.align-center.justify-between.filter-item-heading-js
          .fz-14.lh-20 Sortierung
          .icon.angle
            svg(width="18" height="18")
              use(xlink:href='#angle')

        .filter__item-content   
          each item in ['Beliebteste1','Schnell verfügbar1','Preis aufsteigend1','Preis absteigend1','Neuheiten1','Topseller1']
            .radio.mb-15
              label(for=item).d-flex.align-center.cup
                .radio__btn.pos-r.d-flex.align-center.justify-center.mr-15
                  input(type="radio" name='sorting' id=item)
                  span.radius-100.bordered-lgc
                
                =item 
      
      .filter__item 
        .filter__item-heading.d-flex.align-center.justify-between.filter-item-heading-js
          .fz-14.lh-20 Farbe
          .icon.angle 
            svg(width="18" height="18")
              use(xlink:href='#angle')

        .filter__item-content   
          .input.input_icon-left.mb-40
            input(type="text" placeholder="Suche" name="search") 
            .icon 
              svg(width="18" height="18")
                use(xlink:href='#search')

          each item in [{"title":"Weiss1","color":"#EBEBEB"},{"title":"Grau/Silber1","color":"#767676"},{"title":"Holzfarben dunkel1","color":"#C0962C"},{"title":"Schwarz1","color":"#000","dark":"true"},{"title":"Naturfarben1","color":"#FFEBC6"}]
            if item.dark
              .check-box-wrap.check-box-wrap_border.d-flex.align-center.mb-15
                .check-box.mr-15(style="background:"+item.color)
                  input(type="checkbox" name=item.title id=item.title)
                  .icon.icon_stroke-white
                    svg(width='20' height='20' )
                      use(xlink:href='#check')
                label(for=item.title).fz-14.lh-20.text-black.cup
                  =item.title
                  span.fz-12.text-gray.ml-5 18
            else
              .check-box-wrap.check-box-wrap_border.d-flex.align-center.mb-15
                .check-box.mr-15(style="background:"+item.color)
                  input(type="checkbox" name=item.title id=item.title)
                  .icon.icon_stroke
                    svg(width='20' height='20' )
                      use(xlink:href='#check')
                label(for=item.title).fz-14.lh-20.text-black.cup
                  =item.title
                  span.fz-12.text-gray.ml-5 18
      
      .filter__item 
        .filter__item-heading.d-flex.align-center.justify-between.filter-item-heading-js
          .fz-14.lh-20 Elektrogeräte inkl.
          .icon.angle 
            svg(width="18" height="18")
              use(xlink:href='#angle')

        .filter__item-content   
          each item in ['Ja1','Nein1']          
            .check-box-wrap.d-flex.align-center.mb-15
              .check-box.mr-15
                input(type="checkbox" name=item id=item)
                .icon.icon_stroke
                  svg(width='20' height='20' )
                    use(xlink:href='#check')
              label(for=item).fz-14.lh-20.text-black.cup
                =item
                span.fz-12.text-gray.ml-5 18
            
      .filter__item 
        .filter__item-heading.d-flex.align-center.justify-between.filter-item-heading-js
          .fz-14.lh-20 Preis
          .icon.angle 
            svg(width="18" height="18")
              use(xlink:href='#angle')

        .filter__item-content
          .filter__item-range
            .d-flex.align-center.justify-between.pos-r.mb-30 
              .filter__input-range.d-flex.align-center.justify-between.p-15
                label(for="min1").fz-14.ls-1-6.text-gray CHF
                input.range-js#min1.bordered-lgc(type='text' data-index="0" value="0")
              span.ml-10.mr-10 —
              .filter__input-range.d-flex.align-center.justify-between.p-15
                label(for="max1").fz-14.ls-1-6.text-gray CHF
                input.range-js#max1.bordered-lgc(type='text' data-index="1" value="2000")
            
            .slider-range
      
      .filter__item 
        .filter__item-heading.d-flex.align-center.justify-between.filter-item-heading-js
          .fz-14.lh-20 Marke
          .icon.angle 
            svg(width="18" height="18")
              use(xlink:href='#angle')

        .filter__item-content   
          .input.input_icon-left.mb-40
            input(type="text" placeholder="Suche" name="search") 
            .icon 
              svg(width="18" height="18")
                use(xlink:href='#search')

          each item in ['Celine1','Dieter Knoll1','Novel1']          
            .check-box-wrap.d-flex.align-center.mb-15
              .check-box.mr-15
                input(type="checkbox" name=item id=item)
                .icon.icon_stroke
                  svg(width='20' height='20' )
                    use(xlink:href='#check')
              label(for=item).fz-14.lh-20.text-black.cup
                =item
                span.fz-12.text-gray.ml-5 18

      .filter__item.disabled 
        .filter__item-heading.d-flex.align-center.justify-between.filter-item-heading-js
          .fz-14.lh-20 Breite
          .icon.angle 
            svg(width="18" height="18")
              use(xlink:href='#angle')

        .filter__item-content 

      .filter__item.disabled 
        .filter__item-heading.d-flex.align-center.justify-between.filter-item-heading-js
          .fz-14.lh-20 Tiefe
          .icon.angle 
            svg(width="18" height="18")
              use(xlink:href='#angle')

        .filter__item-content 
  
  .slide-panel__bottom
    button.btn.btn_secondary.w100p Schliessen  

