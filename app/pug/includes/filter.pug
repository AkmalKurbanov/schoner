.filter.bg-white 
  .filter__top.d-flex.justify-between
    .title.title_h2.fw-600.ls-0-1.d-flex.align-center.mr-10 Filter für
    .filter__close.radius-100.bg-white.bordered-lgc.d-flex.align-center.justify-center.cup.filter-close-js 
      .icon.icon_fill   
        svg(width="24" height="24")
          use(xlink:href='#close') 

  .filter__list 
    .filter__item 
      .filter__item-heading.d-flex.align-center.justify-between.filter-item-heading-js
        .fz-14.lh-20 Sortierung
        .icon.angle
          svg(width="18" height="18")
            use(xlink:href='#angle')

      .filter__item-content   
        each item in ['Beliebteste','Schnell verfügbar','Preis aufsteigend','Preis absteigend','Neuheiten','Topseller']
          .radio.mb-15
            label(for=item).d-flex.align-center.cup
              .radio__btn.pos-r.d-flex.align-center.justify-center.mr-15
                input(type="radio" name='sorting' id=item)
                span.radius-100.bordered-lgc
              
              =item 
    .filter__item 
      .filter__item-heading.d-flex.align-center.justify-between.filter-item-heading-js
        .fz-14.lh-20 Farbe
        .icon.angle 
          svg(width="18" height="18")
            use(xlink:href='#angle')

      .filter__item-content   
        .input.input_icon.mb-40
          input(type="text" placeholder="Suche" ) 
          .icon 
            svg(width="18" height="18")
              use(xlink:href='#search')

        each item in [{"title":"Weiss","color":"#EBEBEB"},{"title":"Grau/Silber","color":"#767676"},{"title":"Holzfarben dunkel","color":"#C0962C"},{"title":"Schwarz","color":"#000","dark":"true"},{"title":"Naturfarben","color":"#FFEBC6"}]
          if item.dark
            .check-box-wrap.check-box-wrap_border.check-box-wrap_dark.d-flex.align-center.mb-15
              .check-box.mr-15(style="background:"+item.color)
                input(type="checkbox" name="newsletter" id=item.title)
                .icon.icon_stroke
                  svg(width='20' height='20' viewBox='0 0 20 20' fill='none' xmlns='http://www.w3.org/2000/svg')
                    path(d='M4 10.1667L8.16667 14.3333L16.5 6'  stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round')
              label(for=item.title).fz-14.lh-20.text-black.cup
                =item.title
                span.fz-12.text-gray.ml-5 18
          else
            .check-box-wrap.check-box-wrap_border.d-flex.align-center.mb-15
              .check-box.mr-15(style="background:"+item.color)
                input(type="checkbox" name="newsletter" id=item.title)
                .icon.icon_stroke
                  svg(width='20' height='20' viewBox='0 0 20 20' fill='none' xmlns='http://www.w3.org/2000/svg')
                    path(d='M4 10.1667L8.16667 14.3333L16.5 6'  stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round')
              label(for=item.title).fz-14.lh-20.text-black.cup
                =item.title
                span.fz-12.text-gray.ml-5 18
              
                
    .filter__item 
      .filter__item-heading.d-flex.align-center.justify-between.filter-item-heading-js
        .fz-14.lh-20 Elektrogeräte inkl.
        .icon.angle 
          svg(width="18" height="18")
            use(xlink:href='#angle')

      .filter__item-content   
        each item in ['Ja','Nein']          
          .check-box-wrap.d-flex.align-center.mb-15
            .check-box.mr-15
              input(type="checkbox" name="newsletter" id=item)
              .icon.icon_stroke
                svg(width='20' height='20' viewBox='0 0 20 20' fill='none' xmlns='http://www.w3.org/2000/svg')
                  path(d='M4 10.1667L8.16667 14.3333L16.5 6'  stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round')
            label(for=item).fz-14.lh-20.text-black.cup
              =item
              span.fz-12.text-gray.ml-5 18
          
    .filter__item 
      .filter__item-heading.d-flex.align-center.justify-between.filter-item-heading-js
        .fz-14.lh-20 Preis
        .icon.angle 
          svg(width="18" height="18")
            use(xlink:href='#angle')

      .filter__item-content
        .filter__item-range
          input.amount1(type='text' readonly='' style='border:0; color:#f6931f; font-weight:bold;')
          input.amount2(type='text' readonly='' style='border:0; color:#f6931f; font-weight:bold;')
          .slider-range
          
        .filter__item-range
          input.amount1(type='text' readonly='' style='border:0; color:#f6931f; font-weight:bold;')
          input.amount2(type='text' readonly='' style='border:0; color:#f6931f; font-weight:bold;')
          .slider-range

          
              
                
        



  .filter__bottom
    button.btn.btn_secondary.w100p Schliessen  
